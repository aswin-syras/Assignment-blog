<div class="container">
    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-8">
        <!-- Title -->
        <h1 class="mt-4">Post Title</h1>
        <!-- Author -->
        <p class="lead">by <%= @post.user.email %></p>
        <hr/>
        <!-- Date/Time -->
        <p>Create at: <%= @post.created_at.strftime(" %m/%b/%Y %I:%M%p") %></p>
        <hr/>
        <%= image_tag @post.photo.url,class: "img-fluid rounded" %>
        <hr/>
      <div class="col-md-4">
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Back', posts_path %>
<%= link_to 'Edit', edit_post_path(@post) %>
</div>
</div>
</div>
</div>
